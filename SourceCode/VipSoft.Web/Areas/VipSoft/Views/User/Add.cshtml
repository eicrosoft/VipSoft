@using VipSoft.CMS.Core.Enum
@using VipSoft.Web.Areas.VipSoft.Controllers
@using VipSoft.WebUtility
@model VipSoft.Membership.Core.Entity.Users
@{
    ViewBag.Title = "管理首页";
    Layout = "~/Areas/VipSoft/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="fa">
                        <i class="fa fa-align-justify"></i>
                    </span>
                    <h5>类别维护</h5>
                    <div class="buttons">
                        <a title="Icon Title" class="btn" href="@Url.Action("List", new { cid = @Request.RequestContext.RouteData.Values["cid"], mid = @Request.RequestContext.RouteData.Values["mid"] })"><i class="fa fa-reply"></i><span class="text">返回</span></a>
                    </div>
                </div>
                <div class="widget-content nopadding">
                    <form id="frmCategory" method="post" class="form-horizontal"> 
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.UserName) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-sm" })
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Password)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control input-sm" })
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.RealName)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.RealName, new { @class = "form-control input-sm" })
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.NickName)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.NickName, new { @class = "form-control input-sm" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.CardNo)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.CardNo, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Province) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Province)
                                @Html.LabelFor(model => model.City)
                                @Html.TextBoxFor(model => model.City)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Address)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.ZipCode) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Tel) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Tel, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Mobile) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Fax) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Fax, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Email) </label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.QQ)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.QQ, new { @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Email)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm" })
                            </div>
                        </div> 

                        <div class="form-group">
                            <label class="control-label">@Html.ValidationSummary(true)</label>
                            <div class="controls">
                                @Html.HiddenFor(model => model.ID)
                                <input type="submit" name="btnSubmit" value="提交保存" id="btnSubmit" class="btn btn-primary" />
                                &nbsp;<input name="重置" type="reset" class="btn btn-danger" value="重 置" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script {
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/UEditor/third-party/swfupload/swfupload.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/swfupload.handlers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/VipSoft.User.js")" type="text/javascript"></script>
    <script type="text/javascript">
        //定义mid,cid供VipSoft.XX.js中的变量使用。
        var mid = 0;
        var cid = 0;
    </script>
}

